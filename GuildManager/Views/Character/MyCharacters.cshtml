@model List<Character>

@{
    ViewData["Title"] = "MyCharacters";
}

<h1>My Characters</h1>

<table class="table">

    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Specialization</th>
            <th>Role</th>
            <th>Item Level</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Character c in Model)
        {
            <tr>
                <td>@c.Name</td>

                <td>@c.Class</td>

                <td>@c.Specialization</td>

                <td>@c.Role</td>

                <td>@c.ItemLevel</td>
         

                <td>
                    <a asp-controller="Character" asp-action="Edit" asp-route-characterID="@c.CharacterID">
                        Edit
                    </a>
                </td>

                <td>
                    <a asp-controller="Character" asp-action="Delete" asp-route-characterID="@c.CharacterID">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>

<a asp-controller="Character" asp-action="Add">
    Add Character
</a>
